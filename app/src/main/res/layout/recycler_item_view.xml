<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="5dp"
  android:layout_marginStart="8dp"
  android:layout_marginEnd="8dp"
  android:orientation="vertical"
  app:cardCornerRadius="4dp"
  app:cardElevation="2dp"
  >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="@color/activity_color"
    android:gravity="start"
    >

    <ImageView
      android:id="@+id/level_icon"
      android:layout_width="145dp"
      android:layout_height="145dp"
      android:src="@drawable/level_1_icon"
      />

    <TextView
      android:id="@+id/level_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_toEndOf="@+id/level_icon"
      android:textColor="@color/text_color"
      android:textSize="20sp"
      />

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      >

      <ImageView
        android:id="@+id/deco"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/brain_counter_deco"
        />

      <TextView
        android:id="@+id/level_brain_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:text="@string/level_brains"
        android:textColor="@color/text_color"
        android:textSize="20sp"/>

      <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/level_brain_counter"
        android:src="@mipmap/enabled_mind"/>

    </RelativeLayout>

  </RelativeLayout>


</android.support.v7.widget.CardView>